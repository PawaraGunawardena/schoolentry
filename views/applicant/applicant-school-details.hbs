<span align="center">

    <h1>Applicant School Details</h1>

    <div style="width: 60%; text-align: left; padding-left: 60px; padding-right: 66px;padding-bottom: 40px;" >
        <form action="/applicant_school_details" method="post">
            <br>
            <div class="form-group">
                <label for="school_name"> School </label>
                <div class="dropdown" id="school_name">
                    <select name="school_name" class="form-control" id="school_option">
                        {{#each dropdownValues}}
                            <option value="{{this.name}}">{{this.name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <br>
            <div class="form-group">
                <label for="medium"> Medium </label>
                <div class="dropdown" id="medium">
                    <select id="option_medium" name="medium"  data-component="dropdown">
                        <option value="S"> Sinhala </option>
                        <option value="E"> English </option>
                        <option value="T"> Tamil </option>
                    </select>
                </div>
            </div>
            <br>
            <div class="form-group">
                <label for="distance_to_school" class="left">Distance to the School</label>
                <input type="number" class="form-control" name="distance_to_school" required>
            </div>
            <br>
            <div class="form-group">
                <label for="category"> Application Based On </label>
                <div class="dropdown" id="medium">
                    <select id="option_base" name="category"  data-component="dropdown">
                        <option value="Distance"> On Distance Base </option>
                        <option value="Old Student"> On Old Student Base </option>
                    </select>
                </div>
            </div>
            <br>
            <button type="Submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</span>
