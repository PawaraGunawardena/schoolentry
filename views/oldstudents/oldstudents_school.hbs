    <main role="main" class="col-sm-9 ml-sm-auto col-md-10 pt-3">

        <h4>Add Old Student Details Here</h4>

        <form action = "/oldstudents/old_student_school_details" method="post">

            <input type="hidden" name="admission_no" value={{adm_no}}><br/><br/>


            School Name :
            <!--<input type="text" name="school_name"><br/><br/>-->
            <div class="form-group">
                <label for="school_name"></label>

                <div class="form-group">
                    <label for="name">Select the school to update</label>
                    <div class="dropdown" id="name">
                        <select name="name" class="form-control" id="delete_school">
                            {{#each dropdownValues}}
                                <option value="{{this.name}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="date_of_admission" class="left">Date of Admission</label>
                <input type="date" class="form-control" name="date_of_admission" required>
            </div>

            Medium :
            <div class="religion_dev" id="medium">
                <select id="religion_dropdown_id" name="medium"  data-component="dropdown">
                    <option value = "S">Sinhala</option>
                    <option value = "T">Tamil</option>
                    <option value = "E">English</option>
                </select>
            </div><br/><br/>

            <button type="submit" class="btn btn-primary" name = "btn_submit_old_student">Submit</button>
            <button type="submit" class="btn btn-primary" name = "btn_cancel_old_student">Cancel</button>

        </form>
