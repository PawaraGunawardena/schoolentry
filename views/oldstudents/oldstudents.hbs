    <main role="main" class="col-sm-9 ml-sm-auto col-md-10 pt-3">

        <h4>Add Old Student Details Here</h4>

        <form action = "/oldstudents/old_student_details" method="post">

            Admission No :
            <input type="text" name="admission_no"><br/><br/>

            First Name :
            <input type="text" name="first_name"><br/><br/>

            Last Name :
            <input type="text" name="last_name"><br/><br/>

            Date of Birth
            <input type="date" class="form-control" name="date_of_birth" required><br/>
            <div class="nationality_dev" id="nationality">
                <select id="province_dropdown_id" name="nationality_dropdown"  data-component="dropdown">
                    <option value = "Select National">Select National</option>
                    <option value = "Sinhala">Sinhala</option>
                    <option value = "Tamil">Tamil</option>
                    <option value = "Muslim"> Muslim</option>
                    <option value = "Berger"> Berger</option>
                </select>
            </div><br/><br/>

            <div class="religion_dev" id="religion">
                <select id="religion_dropdown_id" name="religion_dropdown"  data-component="dropdown">
                    <option value = "Select Religion">Select Religion</option>
                    <option value = "Buddhism">Buddhism</option>
                    <option value = "Christianity">Christianity</option>
                    <option value = "Islam">Islam</option>
                    <option value = "Hindu">Hindu</option>
                    <option value = "Other">Other</option>
                </select>
            </div><br/><br/>

            Gender :
            <div class="religion_dev" id="religion">
                <select id="religion_dropdown_id" name="gender"  data-component="dropdown">
                    <option value = "M">Male</option>
                    <option value = "F">Female</option>
                </select>
            </div><br/><br/>

            Guardian NIC No :
            <input type="text" name="guardian_nic_no"><br/><hr>

            <button type="submit" class="btn btn-primary" name = "btn_submit_old_student">Submit</button>
