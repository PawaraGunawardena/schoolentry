
{{#section 'head'}}
    <link rel="stylesheet" href="/stylesheets/login.css">
{{/section}}

<div class="container">
    <br>
    <br>
    <form class="form-signin" method="POST" action = "/users/remove" enctype="application/x-www-form-urlencoded">
        <h2 class="form-signin-heading">Remove a user</h2>
        <label for="usernm" class="sr-only">Username</label>
        <input type="text" id="usernm" class="form-control" name="username" placeholder="Username of the user" required autofocus>
        <br />
        <br />
        <button class="btn btn-lg btn-primary btn-block" type="submit">Remove User</button>
    </form>
</div> <!-- /container -->
