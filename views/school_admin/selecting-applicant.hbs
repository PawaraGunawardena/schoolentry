<div style="width: 80%; text-align: center; padding-left: 300px; padding-right: 66px;padding-bottom: 40px;" >
    <form action="/schooluser/select_applicant" method="POST">
        <div class="form-group">
            <label for="applicant_id" class="left">Enter Student ID
                <input type="number" class="form-control" name="applicant_id" required>
            </label>
        </div>
        <div class="form-group">
            <label for="medium"> Medium </label>
            <div class="dropdown" id="medium">
                <select id="option_medium" name="medium"  data-component="dropdown">
                    <option value="S"> Sinhala </option>
                    <option value="E"> English </option>
                    <option value="T"> Tamil </option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-default">
        </div>
    </form>
</div>