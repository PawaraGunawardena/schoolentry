
{{#section 'head'}}
    <link rel="stylesheet" href="/stylesheets/login.css">
{{/section}}

<div class="container">
    <br>
    <br>
    <form class="form-signin" method="POST" action = "/users/signup" enctype="application/x-www-form-urlencoded">
        <h2 class="form-signin-heading">Add user data</h2>
        <label for="usernm" class="sr-only">Email</label>
        <input type="text" id="userID" class="form-control" name="email" placeholder="Email" required autofocus>
        <label for="usernm" class="sr-only">Username</label>
        <input type="text" id="usernm" class="form-control" name="username" placeholder="Username" required autofocus>
        <label for="pass" class="sr-only">Password</label>
        <input type="password" id="pass" class="form-control" name="password" placeholder="Password" required>
        <label for="pass" class="sr-only">Confirm Password</label>
        <input type="password" id="confpass" class="form-control" name="confirmpassword" placeholder="Confirm Password" required>
        <br>
        User Role
        <div class="dropdown" id="religion">
            <select class="selectpicker" id="input_3" name="user_type"  data-component="dropdown">
                <option value="moe_officer"> Ministry of Education Officer</option>
                <option value="school_admin"> School Admin </option>
                <option value="principal"> Principal </option>
                <option value="school_clerk"> School Clerk </option>
            </select>
        </div>
        <br>


        <button class="btn btn-lg btn-primary btn-block" type="submit">Add User</button>
    </form>
</div> <!-- /container -->
